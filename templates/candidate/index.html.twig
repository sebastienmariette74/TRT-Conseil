        {% if is_granted("ROLE_CANDIDATE") %}        
        <p class="card-text">Pr√©nom : {{ app.user.firstname | capitalize }}</p>
        <p class="card-text">Nom : {{ app.user.lastname | upper }}</p>
        <p class="card-text">CV : 
            {% if app.user.cv %}
            <a href="{{ asset('uploads/cvs/' ~ app.user.cv ) }} " target="_blank">Voir le CV</a>
            <a href="{{ path('app_candidate_remove_cv') }}" type="button" class="btn btn-danger btn-sm">supprimer CV</a>
            {% endif %}
            {# <a href="{{ path('app_candidate_remove_cv' , { cv : app.user.cv }) }}" type="button" class="btn btn-danger btn-sm">supprimer CV</a> #}
