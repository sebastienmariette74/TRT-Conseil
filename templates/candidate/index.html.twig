{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}

{% include "candidate/_main.html.twig" %}
{% include "_partials/_flash.html.twig" %}

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Profil</h5>
        <p class="card-text">Email : {{ app.user.email }}</p>
        {% if is_granted("ROLE_CANDIDATE") %}        
        <p class="card-text">Pr√©nom : {{ app.user.firstname | capitalize }}</p>
        <p class="card-text">Nom : {{ app.user.lastname | upper }}</p>
        <p class="card-text">CV : 
            {% if app.user.cv %}
            <a href="{{ asset('build/uploads/' ~ app.user.cv ) }} " target="_blank">Voir le CV</a>
            <a href="{{ path('app_candidate_remove_cv') }}" type="button" class="btn btn-danger btn-sm">supprimer CV</a>
            {% endif %}
        </p>
        {% endif %}
        <a href="{{ path('app_candidate_edit') }}" class="btn btn-sm btn-primary">MODIFIER</a>
    </div>
</div>
{% endblock %}