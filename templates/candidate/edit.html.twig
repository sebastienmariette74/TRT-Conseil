{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
<h1>Bienvenue {{ app.user.email }}</h1>

{% include "candidate/_main.html.twig" %}

<div>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.cv) }}
    <div >

        {{ form_row(form.cvFile) }}
    </div>
    <button type="submit" class="btn btn-sm btn-primary mt-3">Modifier</button>
    {{ form_end(form) }}
</div>

{% endblock %}